{
  "name": "explorer-for-endevor",
  "displayName": "Explorer for Endevor",
  "description": "Explorer for Endevor",
  "author": "Broadcom",
  "version": "1.2.0",
  "publisher": "BroadcomMFD",
  "homepage": "https://github.com/eclipse/che-che4z-explorer-for-endevor",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse/che-che4z-explorer-for-endevor"
  },
  "bugs": {
    "url": "https://github.com/eclipse/che-che4z-explorer-for-endevor/issues"
  },
  "license": "SEE LICENSE IN LICENSE",
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "zOS",
    "mainframe",
    "explorer",
    "endevor",
    "zowe"
  ],
  "activationEvents": [
    "onView:e4e.treeView"
  ],
  "main": "./dist/extension.bundle.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "e4eExplorerContainer",
          "title": "Explorer for Endevor",
          "icon": "./resources/logo.svg"
        }
      ]
    },
    "views": {
      "e4eExplorerContainer": [
        {
          "id": "e4e.treeView",
          "name": "Explorer for Endevor"
        }
      ]
    },
    "commands": [
      {
        "command": "e4e.refreshTreeView",
        "title": "Refresh the Tree",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        },
        "category": "Explorer for Endevor"
      },
      {
        "command": "e4e.addNewService",
        "title": "Add a new Endevor connection",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        },
        "category": "Explorer for Endevor"
      },
      {
        "command": "e4e.submitIssue",
        "title": "Submit an extension issue",
        "icon": "$(feedback)",
        "category": "Explorer for Endevor"
      },
      {
        "command": "e4e.addNewSearchLocation",
        "title": "Add a new inventory location",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "e4e.addElementFromFileSystem",
        "title": "Add an Element",
        "icon": "$(file-add)"
      },
      {
        "command": "e4e.hideService",
        "title": "Hide an Endevor connection",
        "icon": "$(eye-closed)"
      },
      {
        "command": "e4e.hideSearchLocation",
        "title": "Hide an inventory location",
        "icon": "$(eye-closed)"
      },
      {
        "command": "e4e.deleteSearchLocation",
        "title": "Delete an inventory location"
      },
      {
        "command": "e4e.deleteService",
        "title": "Delete an Endevor connection"
      },
      {
        "command": "e4e.viewElementDetails",
        "title": "View Details"
      },
      {
        "command": "e4e.retrieveElement",
        "title": "Retrieve"
      },
      {
        "command": "e4e.retrieveElementWithDependencies",
        "title": "Retrieve with dependencies"
      },
      {
        "command": "e4e.editElement",
        "title": "Edit"
      },
      {
        "command": "e4e.generateElement",
        "title": "Generate In Place",
        "icon": "$(check)"
      },
      {
        "command": "e4e.generateElementWithCopyBack",
        "title": "Generate with Copyback",
        "icon": "$(arrow-down)"
      },
      {
        "command": "e4e.generateElementWithNoSource",
        "title": "Generate with No Source"
      },
      {
        "command": "e4e.printListing",
        "title": "Print listing"
      },
      {
        "command": "e4e.diff.discardChanges",
        "title": "Discard changes",
        "icon": "$(discard)"
      },
      {
        "command": "e4e.diff.acceptChanges",
        "title": "Accept changes",
        "icon": "$(check)"
      },
      {
        "command": "e4e.signOutElement",
        "title": "Sign out"
      },
      {
        "command": "e4e.signInElement",
        "title": "Sign In"
      },
      {
        "command": "e4e.cleanupStorage",
        "title": "Cleanup configuration storage",
        "category": "Explorer for Endevor"
      },
      {
        "command": "e4e.migrateLocationsFromSettings",
        "title": "Migrate connections/inventory locations from the previous version",
        "category": "Explorer for Endevor"
      }
    ],
    "submenus": [
      {
        "id": "e4e.generateElementUpTheMap",
        "label": "Generate element"
      }
    ],
    "menus": {
      "e4e.generateElementUpTheMap": [
        {
          "command": "e4e.generateElementWithCopyBack",
          "group": "e4e_generate_element_actions@0"
        },
        {
          "command": "e4e.generateElementWithNoSource",
          "group": "e4e_generate_element_actions@1"
        },
        {
          "command": "e4e.generateElement",
          "group": "e4e_generate_element_actions@2"
        }
      ],
      "view/title": [
        {
          "command": "e4e.refreshTreeView",
          "when": "view == e4e.treeView",
          "group": "navigation"
        },
        {
          "command": "e4e.addNewService",
          "when": "view == e4e.treeView",
          "group": "navigation"
        },
        {
          "command": "e4e.submitIssue",
          "when": "view == e4e.treeView",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "e4e.diff.discardChanges",
          "group": "navigation",
          "when": "isInDiffEditor && resourceDirname in e4e.editedFolders && isWeb != true"
        },
        {
          "command": "e4e.diff.acceptChanges",
          "group": "navigation",
          "when": "isInDiffEditor && resourceDirname in e4e.editedFolders && isWeb != true"
        }
      ],
      "view/item/context": [
        {
          "command": "e4e.viewElementDetails",
          "when": "viewItem == ELEMENT_IN_PLACE || viewItem == ELEMENT_UP_THE_MAP",
          "group": "1_e4e_view_element_actions"
        },
        {
          "command": "e4e.editElement",
          "when": "!listMultiSelection && viewItem == ELEMENT_IN_PLACE || !listMultiSelection && viewItem == ELEMENT_UP_THE_MAP",
          "group": "2_e4e_edit_element_actions@0"
        },
        {
          "submenu": "e4e.generateElementUpTheMap",
          "group": "2_e4e_generate_element_actions@0",
          "when": "!listMultiSelection && viewItem == ELEMENT_UP_THE_MAP"
        },
        {
          "command": "e4e.generateElement",
          "when": "!listMultiSelection && viewItem == ELEMENT_IN_PLACE",
          "group": "2_e4e_generate_element_actions@0"
        },
        {
          "command": "e4e.printListing",
          "when": "!listMultiSelection&& viewItem == ELEMENT_IN_PLACE || !listMultiSelection && viewItem == ELEMENT_UP_THE_MAP",
          "group": "2_e4e_generate_element_actions@1"
        },
        {
          "command": "e4e.retrieveElement",
          "when": "viewItem == ELEMENT_IN_PLACE || viewItem == ELEMENT_UP_THE_MAP",
          "group": "3_e4e_retrieve_actions@0"
        },
        {
          "command": "e4e.retrieveElementWithDependencies",
          "when": "viewItem == ELEMENT_IN_PLACE || viewItem == ELEMENT_UP_THE_MAP",
          "group": "3_e4e_retrieve_actions@1"
        },
        {
          "command": "e4e.signOutElement",
          "when": "!listMultiSelection && viewItem == ELEMENT_IN_PLACE || !listMultiSelection && viewItem == ELEMENT_UP_THE_MAP",
          "group": "4_e4e_sign_actions@0"
        },
        {
          "command": "e4e.signInElement",
          "when": "!listMultiSelection && viewItem == ELEMENT_IN_PLACE || !listMultiSelection && viewItem == ELEMENT_UP_THE_MAP",
          "group": "4_e4e_sign_actions@1"
        },
        {
          "command": "e4e.hideSearchLocation",
          "when": "viewItem == LOCATION_PROFILE/INVALID",
          "group": "inline"
        },
        {
          "command": "e4e.hideSearchLocation",
          "when": "viewItem == LOCATION || viewItem == LOCATION_PROFILE || viewItem == LOCATION_PROFILE/INVALID",
          "group": "e4e_search_location_actions@0"
        },
        {
          "command": "e4e.deleteSearchLocation",
          "when": "viewItem == LOCATION",
          "group": "e4e_search_location_actions@1"
        },
        {
          "command": "e4e.addElementFromFileSystem",
          "when": "viewItem == LOCATION || viewItem == LOCATION_PROFILE",
          "group": "inline"
        },
        {
          "command": "e4e.hideService",
          "when": "viewItem == SERVICE_PROFILE/INVALID",
          "group": "inline"
        },
        {
          "command": "e4e.hideService",
          "when": "viewItem == SERVICE || viewItem == SERVICE_PROFILE || viewItem == SERVICE_PROFILE/INVALID",
          "group": "e4e_service_actions@0"
        },
        {
          "command": "e4e.deleteService",
          "when": "viewItem == SERVICE",
          "group": "e4e_service_actions@1"
        },
        {
          "command": "e4e.addNewSearchLocation",
          "when": "viewItem == SERVICE || viewItem == SERVICE_PROFILE",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "e4e.addNewSearchLocation",
          "when": "false"
        },
        {
          "command": "e4e.addElementFromFileSystem",
          "when": "false"
        },
        {
          "command": "e4e.hideSearchLocation",
          "when": "false"
        },
        {
          "command": "e4e.hideService",
          "when": "false"
        },
        {
          "command": "e4e.deleteSearchLocation",
          "when": "false"
        },
        {
          "command": "e4e.deleteService",
          "when": "false"
        },
        {
          "command": "e4e.viewElementDetails",
          "when": "false"
        },
        {
          "command": "e4e.retrieveElement",
          "when": "false"
        },
        {
          "command": "e4e.retrieveElementWithDependencies",
          "when": "false"
        },
        {
          "command": "e4e.editElement",
          "when": "false"
        },
        {
          "command": "e4e.generateElement",
          "when": "false"
        },
        {
          "command": "e4e.generateElementWithCopyBack",
          "when": "false"
        },
        {
          "command": "e4e.generateElementWithNoSource",
          "when": "false"
        },
        {
          "command": "e4e.printListing",
          "when": "false"
        },
        {
          "command": "e4e.diff.discardChanges",
          "when": "isWeb"
        },
        {
          "command": "e4e.diff.acceptChanges",
          "when": "isWeb"
        },
        {
          "command": "e4e.signOutElement",
          "when": "false"
        },
        {
          "command": "e4e.signInElement",
          "when": "false"
        },
        {
          "command": "e4e.migrateLocationsFromSettings",
          "when": "config.profiles.keepInSync"
        }
      ]
    },
    "configuration": {
      "title": "Explorer for Endevor",
      "properties": {
        "endevor.locations": {
          "deprecationMessage": "Please, use the extension UI to modify the extension locations instead.",
          "type": "array",
          "title": "Endevor locations",
          "description": "List of Endevor locations to load on extension startup",
          "scope": "resource",
          "items": {
            "type": "object",
            "properties": {
              "service": {
                "type": "string",
                "description": "Endevor profile name"
              },
              "elementLocations": {
                "type": "array",
                "description": "Endevor location profile names",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "service",
              "elementLocations"
            ]
          }
        },
        "endevor.maxParallelRequests": {
          "type": "number",
          "title": "Endevor HTTP WebServices parallel requests amount",
          "description": "Number of parallel HTTP requests that are supported by Endevor",
          "scope": "resource",
          "default": 4
        },
        "endevor.automaticSignOut": {
          "type": "boolean",
          "scope": "resource",
          "title": "Automatic sign-out",
          "description": "Automatically sign elements out",
          "default": false
        },
        "endevor.fileExtensionResolution": {
          "title": "File extension resolution",
          "description": "Specifies the method of the file extension resolution for the locally saved elements",
          "type": "string",
          "enum": [
            "Element name only",
            "Endevor type file extension only",
            "Endevor type file extension or type name"
          ],
          "enumDescriptions": [
            "Uses the element name to determine the file extension",
            "Uses the Endevor defined file extension for the type",
            "Uses the Endevor defined file extension for the type or type name as a fall-back option"
          ],
          "default": "Endevor type file extension or type name",
          "scope": "resource"
        },
        "profiles.keepInSync": {
          "type": "boolean",
          "scope": "resource",
          "default": true,
          "title": "Keep in sync with Zowe CLI",
          "description": "Keep Endevor configuration in sync with Zowe profiles or a Team Configuration file"
        }
      }
    }
  },
  "scripts": {
    "build:prod": "rimraf dist && webpack --config webpack.prod.js",
    "build:dev": "rimraf dist && webpack --config webpack.dev.js",
    "build:watch": "rimraf dist && webpack --config webpack.dev.js --watch",
    "type": "tsc --watch --noEmit",
    "lint": "concurrently -n \"typescpt,_cycles_,_eslint_,prettier\" \"tsc --noemit \" \"madge --circular --extensions ts ./\" \"eslint --ext .ts .\" \"prettier --check .\"",
    "eslint:watch": "eslint --ext .ts . --watch",
    "detect-cycles": "madge --circular --extensions ts ./",
    "pretty": "prettier --write .",
    "test": "yarn run test:no-vscode && yarn run test:vscode",
    "test:no-vscode": "jest --config jest.config.js --coverage",
    "test:watch": "jest --config jest.config.js --watch",
    "test:vscode": "ts-node ./vscode-test.run.ts",
    "tsc:watch": "tsc --noemit --watch",
    "package": "mkdirp vsce && vsce package --yarn -o vsce/explorer-for-endevor.vsix",
    "clean": "rimraf dist results vsce node_modules .vscode-test LICENSE NOTICE.md",
    "copy-into-repo-root": "copyfiles README.md CHANGELOG.md LICENSE NOTICE.md CONTRIBUTING.md ../../"
  },
  "dependencies": {
    "@local/endevor": "1.0.0",
    "@local/extension": "1.0.0",
    "@local/vscode-wrapper": "1.0.0",
    "@zowe/imperative": "^5.3.3",
    "@zowe/zowe-explorer-api": "2.2.1",
    "@local/type-parser": "1.0.0"
  },
  "extensionDependencies": [
    "Zowe.vscode-extension-for-zowe"
  ]
}
